# CharacterCut Backend Environment Variables

# Deployment stage (development, staging, production)
STAGE=development

# Server configuration
PORT=8000
HOST=0.0.0.0

# CORS configuration (comma-separated list for production)
ALLOWED_ORIGINS=*

# Rate limiting
MAX_REQUESTS_PER_MINUTE=10
BATCH_MAX_REQUESTS_PER_MINUTE=2

# File upload limits
MAX_FILE_SIZE_MB=50
MAX_BATCH_SIZE=10

# Image processing
DEFAULT_MODEL=u2net
FALLBACK_MODELS=silueta,u2netp

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO
